<idea-plugin>
    <id>de.unitrier.st.codesparks.fst20.pmd.demo</id>
    <name>FST'20</name>
    <version>1.0</version>
    <vendor email="softwaretechnik@informatik.uni-trier.de" url="https://www.st.uni-trier.de">Software Engineering
        Group
    </vendor>

    <!--description>FST'20</description-->

    <!--change-notes>
    </change-notes-->

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="201.6668.113"/>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceInterface="de.unitrier.st.codesparks.core.service.ACodeSparksInstanceService"
                            serviceImplementation="de.unitrier.st.codesparks.fst20.PMDInstanceService"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="codesparks.start.flow"
                class="de.unitrier.st.codesparks.fst20.StartPMDFlowAction"
                text="Start PMD Flow"
                description="Start pmd flow"
                icon="/icons/pmd_37x15.png"
        >
            <add-to-group group-id="MainToolBar" anchor="last"/>
        </action>
        <!--action id="toggle.show.hide.visualizations"
                class="de.unitrier.st.codesparks.core.action.ToggleVisualization"
                text="Hide CodeSparks Visualizations"
                icon="/icons/codesparks_visible_20x13.png">
                <add-to-group group-id="MainToolBar" anchor="last"/>
        </action-->
    </actions>

</idea-plugin>