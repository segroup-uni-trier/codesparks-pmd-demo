<idea-plugin>
    <id>codesparks.pmd.demo</id>
    <name>CodeSparks-PMD</name>
    <version>1.0</version>
    <!-- @formatter:off -->
    <vendor email="softwaretechnik@informatik.uni-trier.de" url="https://www.st.uni-trier.de">University of Trier - Software Engineering Group</vendor>
    <!-- @formatter:on -->

    <description>
        This is a demo implementation of the CodeSparks framework.
    </description>

    <!--change-notes>
    </change-notes-->

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="201.6668.113"/>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceInterface="de.unitrier.st.codesparks.core.service.CodeSparksInstanceService"
                            serviceImplementation="de.unitrier.codesparks.demo.PMDInstanceService"
        />
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="codesparks.start.flow"
                class="de.unitrier.codesparks.demo.StartPMDFlowAction"
                text="Start PMD Flow"
                description="Start pmd flow"
                icon="/icons/pmd_37x15.png"
        >
            <add-to-group group-id="MainToolBar" anchor="last"/>
        </action>
    </actions>

</idea-plugin>